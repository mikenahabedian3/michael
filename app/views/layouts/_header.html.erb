<header>
  <!-- Header Start -->
  <div class="header-area header-transparrent">
    <div class="headder-top header-sticky">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-3 col-md-2">
            <!-- Logo -->
            <div class="logo">
              <a href="#">
                <img src="<%= asset_url("img/logo/logo.png")%>" alt=""/>
              </a>
            </div>
          </div>
          <div class="col-lg-9 col-md-9">
            <div class="menu-wrapper">
              <!-- Main-menu -->
              <div class="main-menu">
                <nav class="d-none d-lg-block">
                  <ul id="navigation">
                    <% if current_user.present? %>
                      <li>
                        <a href="#">Profile</a>
                        <ul class="submenu">
                          <li><%= link_to "Saved Jobs", user_jobs_path %></li>
                        </ul>
                    </li>
                    <% end %>
                  </ul>
                </nav>
              </div>
              <!-- Header-btn -->
              <div class="header-btn d-none f-right d-lg-block">
                <% unless current_user.present? %>
                  <%= link_to "LogIn", new_user_session_path, class: "btn head-btn2"%>
                  <%= link_to "Register", new_user_registration_path, class: "btn head-btn1"%>
                <% else %>
                  <%= link_to "Sign out", destroy_user_session_path, class: "btn head-btn1", data: { turbo_method: :delete }, id: "sign_out_menu_link" %>
                <% end %>
              </div>  
            </div>
          </div>
          <!-- Mobile Menu -->
          <div class="col-12">
            <div class="mobile_menu d-block d-lg-none"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Header End -->
</header>
