<section class="contact-section">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h2 class="contact-title">Log in</h2>
      </div>
      <div class="col-lg-12">
        <%= form_for(resource, as: resource_name, url:
        session_path(resource_name), class: "form-contact contact_form") do |f|
        %>
        <div class="row">
          <div class="col-12">
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "form-control w-100 valid", placeholder: "Email" %>
            </div>
          </div>
          <div class="col-12">
            <div class="form-group">
              <%= f.password_field :password, autocomplete: "current-password",
              class: "form-control w-100 valid", placeholder: "********" %>
            </div>
          </div>
          <div class="col-12">
            <div class="form-group">
              <% if devise_mapping.rememberable? %> <%= f.check_box :remember_me
              %> <%= f.label :remember_me %> <% end %>
            </div>
          </div>
        </div>
        <div class="form-group mt-3">
          <%= f.submit "Log in", class: "button button-contactForm boxed-btn" %>
        </div>
        <div class="form-group"><%= render "devise/shared/links" %></div>
        <% end %>
      </div>
    </div>
  </div>
</section>
